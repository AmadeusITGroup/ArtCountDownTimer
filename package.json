{
  "name": "art-timer",
  "version": "1.0.0",
  "description": "An Electron application for managing ART planning sessions.",
  "main": "main.js",
  "scripts": {
    "test": "jest",
    "start": "electron main.js",
    "build": "electron-builder",
    "dev": "electron .",
    "lint": "eslint ."
  },
  "build": {
    "appId": "com.example.arttimer",
    "productName": "ART Timer",
    "files": [
      "main.js",
      "src/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src/inputParameters.json",
        "to": "inputParameters.json"
      },
      {
        "from": "src/resources/static/img/tray_icon.png",
        "to": "tray_icon.png"
      },
      {
        "from": "src/resources/static/img/icon.ico",
        "to": "app_icon.ico"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "src/resources/static/img/icon.ico"
    }
  },
  "author": {
    "name": "Vasukipriya K N",
    "email": "vallishavasuki1@gmail.com"
  },
  "license": "MIT",
  "keywords": [
    "electron",
    "timer",
    "planning",
    "agile",
    "art"
  ],
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "electron": "^35.7.5",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^9.36.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "<rootDir>/__mocks__/styleMock.js",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js"
    },
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/*.test.js"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
